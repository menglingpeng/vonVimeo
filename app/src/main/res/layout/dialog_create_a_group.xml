<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/group_name_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/group_name_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/group_desc_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_name_til">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/group_desc_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/privacy_settings_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_desc_til">

        <TextView
            android:id="@+id/privacy_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioGroup
            android:id="@+id/group_privacy_settings_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/group_privacy_settings_anyone_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/group_privacy_settings_anyone_rb_text"/>

            <RadioButton
                android:id="@+id/group_privacy_settings_members_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/group_privacy_settings_members_rb_text"/>

        </RadioGroup>


    </RelativeLayout>

</RelativeLayout>