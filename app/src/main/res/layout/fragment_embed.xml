<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/embed_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/embed_title_tv_layout_marginTop"
        android:layout_marginLeft="@dimen/embed_title_tv_layout_marginLeft"
        android:layout_marginBottom="@dimen/embed_title_tv_layout_marginBottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/embed_title_tv_textSize"
        android:text="@string/embed_title_tv_text"/>

    <Button
        android:id="@+id/embed_title_upgrade_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/embed_title_tv"
        android:layout_toRightOf="@+id/embed_title_tv"
        android:layout_marginLeft="@dimen/embed_title_upgrade_bt_layout_marginLeft"
        android:visibility="gone"
        android:text="general_privacy_settings_upgrade_bt_text"/>

    <TextView
        android:id="@+id/embed_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/embed_title_tv"
        android:layout_alignLeft="@+id/embed_title_tv"
        android:layout_marginBottom="@dimen/embed_desc_tv_layout_marginBottom"
        android:text="@string/embed_desc_tv_text"/>

    <RelativeLayout
        android:id="@+id/embed_controls_settings_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/embed_desc_tv"
        android:layout_alignLeft="@+id/embed_desc_tv">

        <TextView
