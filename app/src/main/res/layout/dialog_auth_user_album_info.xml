<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <ImageView
        android:id="@+id/info_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/info_title_tv"
        android:src="@drawable/ic_close_grey_600_18dp"/>

    <TextView
        android:id="@+id/info_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_title_tv"
        android:layout_alignLeft="@+id/info_title_tv"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>