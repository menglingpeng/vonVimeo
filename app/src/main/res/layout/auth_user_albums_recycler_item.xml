<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginRight="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginTop="@dimen/recycler_view_item_layout_marginTop"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/recycler_view_item_padding"
    card_view:cardCornerRadius="@dimen/recycler_view_item_card_view_card_corner_radius"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/album_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/auth_user_album_thumb_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_user_album_thumb_iv_layout_height"
            android:layout_marginBottom="@dimen/auth_user_album_thumb_iv_layout_marginBottom" />

        <RelativeLayout
            android:id="@+id/auth_user_album_desc_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/auth_user_album_thumb_iv"
            android:layout_marginBottom="@dimen/auth_user_album_desc_rl_layout_marginBottom">

            <TextView
                android:id="@+id/auth_user_album_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/auth_user_album_name_tv_layout_marginBottom"
                android:textSize="@dimen/auth_user_album_name_tv_text_size"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

            <TextView
                android:id="@+id/auth_user_album_videos_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/auth_user_album_name_tv"
                android:layout_alignLeft="@+id/auth_user_album_name_tv"
                android:layout_marginTop="@dimen/auth_user_album_videos_count_tv_layout_marginTop"/>

            <TextView
                android:id="@+id/auth_user_album_spacer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/auth_user_album_videos_count_tv"
                android:layout_alignTop="@+id/auth_user_album_videos_count_tv"
                android:layout_marginLeft="@dimen/detail_view_following_spacer_tv_layout_marginLeft"
                android:layout_marginRight="@dimen/detail_view_following_spacer_tv_layout_marginLeft"
                android:text="/"/>

            <TextView
                android:id="@+id/auth_user_album_created_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/auth_user_album_spacer_tv"
                android:layout_alignTop="@+id/auth_user_album_videos_count_tv"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/auth_user_album_info_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/auth_user_album_info_rl_layout_weight">

                <ImageView
                    android:id="@+id/auth_user_album_info_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_info_grey_600_18dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/auth_user_album_share_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/auth_user_album_info_rl_layout_weight">

                <ImageView
                    android:id="@+id/auth_user_album_share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_share_grey_600_18dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/auth_user_album_view_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/auth_user_album_info_rl_layout_weight">

                <ImageView
                    android:id="@+id/auth_user_album_view_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_remove_red_eye_grey_600_18dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/auth_user_album_settings_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/auth_user_album_info_rl_layout_weight">

                <ImageView
                    android:id="@+id/auth_user_album_settings_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_settings_grey_600_18dp"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

