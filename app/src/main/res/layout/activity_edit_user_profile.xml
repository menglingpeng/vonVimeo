<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_user_cdl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menglingpeng.vonvimeo.mvp.view.activity.UserPicturesActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.menglingpeng.vonvimeo.mvp.view.activity.UserPicturesActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_user_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_avatar_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/user_avatar_iv"
            android:layout_width="@dimen/user_profile_avatar_iv_layout_width"
            android:layout_height="@dimen/user_profile_avatar_iv_layout_height"
            android:layout_marginTop="@dimen/profile_avatar_iv_layout_marginTop"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/edit_user_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_avatar_iv"
            android:layout_alignLeft="@+id/user_avatar_iv"
            android:layout_marginTop="@dimen/profile_avatar_iv_layout_marginTop"/>

        <EditText
            android:id="@+id/edit_user_bio_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_desc_tv"
            android:layout_alignLeft="@+id/user_avatar_iv"
            android:layout_marginTop="@dimen/profile_avatar_iv_layout_marginTop"/>


        <TextView
            android:id="@+id/edit_user_location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_bio_et"
            android:layout_alignLeft="@+id/user_avatar_iv"
            android:layout_marginTop="@dimen/profile_avatar_iv_layout_marginTop"/>

        <EditText
            android:id="@+id/edit_user_location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_location_tv"
            android:layout_alignLeft="@+id/user_avatar_iv"
            android:layout_marginTop="@dimen/profile_avatar_iv_layout_marginTop"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/upload_picture_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/floating_action_button_layout_margin"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:borderWidth="@dimen/floating_action_button_borderWidth"
        app:elevation="@dimen/floating_action_button_elevation"
        app:fabSize="normal"
        app:pressedTranslationZ="@dimen/floating_action_button_pressedTranslationZ"
        app:rippleColor="@color/colorPrimaryDark" />

</android.support.design.widget.CoordinatorLayout>