<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/on_demand_page_name_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/on_demand_page_name_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/on_demand_page_desc_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/on_demand_page_name_til">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/on_demand_page_desc_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/on_demand_page_type_settings_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/on_demand_page_desc_til">

        <TextView
            android:id="@+id/on_demand_page_type_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on_demand_page_type_settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioonGroup
            android:id="@+id/on_demand_page_type_settings_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/on_demand_page_type_settings_film_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/on_demand_page_type_settings_film_rb_text"/>

            <RadioButton
                android:id="@+id/on_demand_page_type_settings_series_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/on_demand_page_type_settings_series_rb_text"/>

        </RadioonGroup>

        <Spinner
            android:id="@+id/content_rating_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/on_demand_page_type_settings_rg"
            android:layout_alignLeft="@+id/on_demand_page_type_settings_rg"
            android:layout_marginTop="@dimen/content_rating_spinner_layout_marginTop"
            android:backgroundTint="@android:color/white"
            android:backgroundTintMode="src_atop"
            android:dropDownWidth="@dimen/spinner_drop_down_width"
            android:popupBackground="@color/colorPrimary"></Spinner>


    </RelativeLayout>

</RelativeLayout>