<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_delete_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_delete_title_tv_layout_marginTop"
        android:layout_marginLeft="@dimen/dialog_delete_title_tv_layout_marginLeft"
        android:textSize="@dimen/dialog_delete_title_tv_text_size"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <ImageView
        android:id="@+id/dialog_delete_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dialog_delete_title_tv"
        android:layout_marginEnd="@dimen/dialog_delete_close_iv_layout_marginEnd"
        android:src="@drawable/ic_close_grey_600_18dp"/>

    <TextView
        android:id="@+id/dialog_delete_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_delete_title_tv"
        android:layout_alignLeft="@+id/dialog_delete_title_tv"
        android:layout_marginTop="@dimen/dialog_delete_content_tv_layout_marginTop"/>

</RelativeLayout>