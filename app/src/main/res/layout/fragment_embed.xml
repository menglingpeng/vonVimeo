            android:id="@+id/embed_customization_display_custom_logo_settings_switch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/embed_customization_display_custom_logo_settings_switch"
            android:layout_alignTop="@+id/embed_customization_display_custom_logo_settings_switch"
            android:text="@string/embed_customization_display_custom_logo_settings_switch_tv_text"/>

        <Button
            android:id="@+id/embed_customization_display_custom_logo_settings_upgrade_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/embed_customization_display_custom_logo_settings_switch_tv"
            android:layout_toRightOf="@+id/embed_customization_display_custom_logo_settings_switch_tv"
            android:layout_marginLeft="@dimen/embed_title_upgrade_bt_layout_marginLeft"
            android:visibility="gone"
            android:text="general_privacy_settings_upgrade_bt_text"/>

        <view
            android:id="@+id/embed_customization_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/embed_customization_display_custom_logo_settings_switch"
            android:layout_alignLeft="@+id/embed_customization_display_custom_logo_settings_switch"
            android:background="@color/recycler_item_view_background">

        </view>

    </RelativeLayout>

</RelativeLayout>