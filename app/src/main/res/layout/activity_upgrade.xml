<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upgrade_cdl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menglingpeng.vonvimeo.mvp.view.activity.UpgradeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.menglingpeng.designersshow.mvp.view.activity.UpgradeActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/upgrade_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/on_demand_settings_purchases_desc_tv"
        android:layout_alignLeft="@+id/on_demand_settings_purchases_desc_tv">

        <ProgressBar
            android:id="@+id/upgrade_settings_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:id="@+id/upgrade_settings_plus_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upgrade_settings_plus_rl_layout_marginBottom"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/upgrade_plus_upgrade_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/upgrade_settings_plus_upgrade_bt_layout_marginBottom"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/upgrade_plus_upgrade_bt_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upgrade_plus_upgrade_bt"
                android:layout_alignLeft="@+id/upgrade_plus_upgrade_bt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/upgrade_settings_pro_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upgrade_settings_plus_rl_layout_marginBottom"
            android:layout_below="@+id/upgrade_settings_plus_rl"
            android:layout_alignLeft="@+id/upgrade_settings_plus_rl"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/upgrade_pro_upgrade_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/upgrade_settings_plus_upgrade_bt_layout_marginBottom"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/upgrade_pro_bt_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upgrade_pro_upgrade_bt"
                android:layout_alignLeft="@+id/upgrade_pro_upgrade_bt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/upgrade_business_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upgrade_settings_plus_rl_layout_marginBottom"
            android:layout_below="@+id/upgrade_settings_pro_rl"
            android:layout_alignLeft="@+id/upgrade_settings_pro_rl"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/upgrade_business_upgrade_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/upgrade_settings_plus_upgrade_bt_layout_marginBottom"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/upgrade_business_bt_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upgrade_business_upgrade_bt"
                android:layout_alignLeft="@+id/upgrade_business_upgrade_bt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/upgrade_premium_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upgrade_settings_plus_rl_layout_marginBottom"
            android:layout_below="@+id/upgrade_business_rl"
            android:layout_alignLeft="@+id/upgrade_business_rl"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/upgrade_premium_upgrade_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/upgrade_settings_plus_upgrade_bt_layout_marginBottom"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/upgrade_premium_bt_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upgrade_premium_upgrade_bt"
                android:layout_alignLeft="@+id/upgrade_premium_upgrade_bt" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>