        <Switch
            android:id="@+id/embed_customization_display_custom_logo_settings_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/embed_customization_show_vimeo_logo_settings_switch"
            android:layout_alignLeft="@+id/embed_customization_show_vimeo_logo_settings_switch"
            android:layout_marginBottom="@dimen/embed_controls_playbar_settings_switch_layout_marginBottom"
