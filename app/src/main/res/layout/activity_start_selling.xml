<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_selling_cdl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.menglingpeng.vonvimeo.mvp.view.activity.VimeoOndemandPagesActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/start_selling_ctbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/user_profile_backgroud"
            android:visibility="gone"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleGravity="center"
            app:expandedTitleTextAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="@dimen/profile_ctbl_scrimAnimationDuration">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/start_selling_backgroud_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax" />

                <TextView
                    android:id="@+id/start_selling_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/demand_user_name_tv"
                    android:layout_marginLeft="@dimen/profile_desc_tv_layout_marginLeft"
                    android:layout_marginRight="@dimen/profile_desc_tv_layout_marginRight"
                    android:layout_marginTop="@dimen/profile_desc_tv_layout_marginTop"
                    android:gravity="center"
                    android:textColor="@color/user_profile_desc_tv"
                    android:textColorLink="@color/video_username" />

                <Button
                    android:id="@+id/start_selling_start_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_selling_desc_tv"
                    android:layout_marginTop="@dimen/channel_detail_start_bt_layout_marginTop"
                    android:text="@string/channel_detail_start_bt_text"/>


            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/start_selling_tb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"></android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/start_selling_detail_desc_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/start_selling_join_pro_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:text="start_selling_join_pro_tv_text"
                android:clickable="true"/>

            <TextView
                android:id="@+id/start_selling_join_pro_price_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/start_selling_join_pro_tv"
                android:layout_alignTop="@+id/start_selling_join_pro_tv"
                android:text=""/>

            <TextView
                android:id="@+id/start_selling_join_pro_desc_one_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_selling_join_pro_tv"
                android:layout_alignLeft="@+id/start_selling_join_pro_tv"
                android:text=""/>

            <TextView
                android:id="@+id/start_selling_join_pro_desc_two_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_selling_join_pro_desc_one_tv"
                android:layout_alignLeft="@+id/start_selling_join_pro_desc_one_tv"
                android:text=""/>

            <TextView
                android:id="@+id/start_selling_join_pro_desc_three_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_selling_join_pro_desc_two_tv"
                android:layout_alignLeft="@+id/start_selling_join_pro_desc_two_tv"
                android:text=""/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_selling_join_pro_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upgrade_settings_plus_rl_layout_marginBottom"
            android:layout_below="@+id/start_selling_detail_desc_rl"
            android:layout_alignLeft="@+id/start_selling_detail_desc_rl"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/start_selling_join_pro_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/upgrade_settings_plus_upgrade_bt_layout_marginBottom"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/start_selling_join_pro_bt_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_selling_join_pro_bt"
                />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/start_selling_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/floating_action_button_layout_margin"
        android:src="@drawable/ic_add_white_24dp"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimary"
        app:borderWidth="@dimen/floating_action_button_borderWidth"
        app:elevation="@dimen/floating_action_button_elevation"
        app:fabSize="normal"
        app:pressedTranslationZ="@dimen/floating_action_button_pressedTranslationZ"
        app:rippleColor="@color/colorPrimaryDark" />


</android.support.design.widget.CoordinatorLayout>
