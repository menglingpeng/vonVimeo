<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/dialog_save_video_settings_cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_save_video_settings_cancel_bt_layout_marginLeft"
            android:layout_marginRight="@dimen/dialog_save_video_settings_cancel_bt_layout_marginRight"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/dialog_save_video_settings_save_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_save_video_settings_save_bt_layout_marginLeft"
            android:layout_marginRight="@dimen/dialog_save_video_settings_save_bt_layout_marginRight"/>
    </RelativeLayout>


</LinearLayout>