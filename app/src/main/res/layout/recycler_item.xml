<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginRight="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginTop="@dimen/recycler_view_item_layout_marginTop"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/recycler_view_item_padding"
    card_view:cardCornerRadius="@dimen/recycler_view_item_card_view_card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/desc_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_view_item_desc_layout_layout_height"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/avatar_iv"
                android:layout_width="@dimen/recycler_view_item_avatar_layout_width"
                android:layout_height="@dimen/recycler_view_item_avatar_layout_height"
                android:layout_marginStart="@dimen/recycler_view_item_avatar_layout_marginLeft"
                android:src="@drawable/ic_avatar" />

            <TextView
                android:id="@+id/video_title_tv"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/recycler_view_item_avatar_layout_marginLeft"
                android:layout_toRightOf="@+id/avatar_iv"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/video_user_name_tv"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_title_tv"
                android:layout_marginStart="@dimen/recycler_view_item_avatar_layout_marginLeft"
                android:layout_toRightOf="@+id/avatar_iv"
                android:textColor="@color/shots_username" />

            <TextView
                android:id="@+id/comma_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_title_tv"
                android:layout_toRightOf="@+id/video_user_name_tv"
                android:text="," />

            <TextView
                android:id="@+id/video_create_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_title_tv"
                android:layout_marginLeft="@dimen/recycler_view_item_shots_create_time_tv_layout_marginLeft"
                android:layout_toRightOf="@+id/comma_tv" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/video_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_rl">

            <ImageView
                android:id="@+id/video_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_view_item_shots_iv__layout_height"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop" />

        </FrameLayout>


        <RelativeLayout
            android:id="@+id/comments_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_view_item_comments_layout_layout_height"
            android:layout_below="@+id/video_fl"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/video_likes_count_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_imageview_layout_marginLeft"
                android:src="@drawable/ic_favorite_grey_600" />

            <TextView
                android:id="@+id/video_likes_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_textview_layout_marginLeft"
                android:layout_toRightOf="@+id/video_likes_count_iv" />

            <ImageView
                android:id="@+id/video_comments_count_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_imageview_layout_marginLeft"
                android:layout_toRightOf="@+id/video_likes_count_tv"
                android:src="@drawable/ic_mode_comment_grey_600" />

            <TextView
                android:id="@+id/video_comments_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_textview_layout_marginLeft"
                android:layout_toRightOf="@+id/video_comments_count_iv" />

            <ImageView
                android:id="@+id/video_views_count_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_imageview_layout_marginLeft"
                android:layout_toRightOf="@+id/video_comments_count_tv"
                android:src="@drawable/ic_view" />

            <TextView
                android:id="@+id/video_views_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_textview_layout_marginLeft"
                android:layout_toRightOf="@+id/video_views_count_iv" />

            <ImageView
                android:id="@+id/video_attachments_count_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_imageview_layout_marginLeft"
                android:layout_toRightOf="@+id/video_views_count_tv"
                android:src="@drawable/ic_attachment_24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/video_attachments_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_textview_layout_marginLeft"
                android:layout_toRightOf="@+id/video_attachments_count_iv"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>