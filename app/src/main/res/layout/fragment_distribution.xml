            android:id="@+id/distribution_file_links_settings_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distribution_file_links_settings_desc_tv"
            android:layout_alignLeft="@+id/distribution_file_links_settings_desc_tv"
