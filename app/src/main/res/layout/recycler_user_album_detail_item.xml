<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginRight="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginTop="@dimen/recycler_view_item_layout_marginTop"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/recycler_view_item_padding"
    card_view:cardCornerRadius="@dimen/recycler_view_item_card_view_card_corner_radius">

    <RelativeLayout
        android:id="@+id/album_detail_video_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/album_detail_video_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/album_detail_video_thumb_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_detail_video_thumb_iv_layout_height"
            android:layout_marginBottom="@dimen/album_detail_video_thumb_iv_layout_marginBottom"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/album_detail_video_thumb_iv">

            <TextView
                android:id="@+id/album_detail_video_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/album_detail_video_name_tv_layout_marginBottom"
                android:layout_marginLeft="@dimen/album_detail_video_name_tv_layout_marginLeft"
                android:textSize="@dimen/album_detail_video_name_tv_textSize"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

            <ImageView
                android:id="@+id/album_detail_video_user_avatar_iv"
                android:layout_width="@dimen/album_detail_video_user_avatar_iv_layout_width"
                android:layout_height="@dimen/album_detail_video_user_avatar_iv_layout_height"
                android:layout_below="@+id/album_detail_video_name_tv"
                android:layout_alignLeft="@+id/album_detail_video_name_tv" />

            <TextView
                android:id="@+id/album_detail_video_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/album_detail_video_user_avatar_iv"
                android:layout_alignTop="@+id/album_detail_video_user_avatar_iv"
                android:layout_marginLeft="@dimen/album_detail_video_user_name_tv_layout_marginLeft"
                android:layout_marginBottom="@dimen/album_detail_video_user_name_tv_layout_marginBottom"
                android:clickable="true"/>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>