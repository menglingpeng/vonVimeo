<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_preferences_settings_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/account_settings_general_title_tv_layout_marginTop"
        android:layout_marginBottom="@dimen/account_settings_general_title_tv_layout_marginBottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/account_settings_general_title_tv_textSize"
        android:text="@string/view_preferences_settings_title_tv_text"/>

    <RelativeLayout
        android:id="@+id/view_preferences_settings_language_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_preferences_settings_title_tv"
        android:layout_below="@+id/view_preferences_settings_title_tv"
        android:layout_marginBottom="@dimen/account_settings_general_title_tv_layout_marginBottom">

        <TextView
            android:id="@+id/view_preferences_settings_language_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/account_settings_general_name_title_tv_layout_marginBottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/view_preferences_settings_language_title_tv_text"/>

        <TextView
            android:id="@+id/view_preferences_settings_language_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_preferences_settings_language_title_tv"
            android:layout_alignLeft="@+id/view_preferences_settings_language_title_tv"
            android:layout_marginBottom="@dimen/account_settings_general_name_desc_tv_layout_marginBottom"
            android:text="@string/view_preferences_settings_language_desc_tv_text"/>

        <Spinner
            android:id="@+id/view_preferences_settings_language_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:backgroundTintMode="src_atop"
            android:dropDownWidth="match_parent"
            android:popupBackground="@color/cardview_dark_background"></Spinner>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_preferences_settings_mature_content_filter_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_preferences_settings_language_rl"
        android:layout_below="@+id/view_preferences_settings_language_rl"
        android:layout_marginBottom="@dimen/account_settings_general_title_tv_layout_marginBottom">

        <TextView
            android:id="@+id/view_preferences_settings_mature_content_filter_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/account_settings_general_name_title_tv_layout_marginBottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/view_preferences_settings_mature_content_filter_title_tv_text"/>

        <TextView
            android:id="@+id/view_preferences_settings_mature_content_filter_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_preferences_settings_mature_content_filter_title_tv"
            android:layout_alignLeft="@+id/view_preferences_settings_mature_content_filter_title_tv"
            android:layout_marginBottom="@dimen/account_settings_general_name_desc_tv_layout_marginBottom"
            android:text="@string/view_preferences_settings_mature_content_filter_desc_tv_text"/>

        <RadioGroup
            android:id="@+id/view_preferences_settings_mature_content_filter_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/view_preferences_settings_mature_content_filter_show_me_everything_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_anyone_rb_text"/>

            <RadioButton
                android:id="@+id/view_preferences_settings_mature_content_filter_no_show_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_i_rb_text"/>

            <RadioButton
                android:id="@+id/view_preferences_settings_mature_content_filter_choose_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_with_password_rb_text"/>

            <RadioButton
                android:id="@+id/view_preferences_settings_mature_content_filter_only_follow_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_follow_rb_text"/>

            <RadioButton
                android:id="@+id/view_preferences_settings_mature_content_filter_only_choose_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_choose_rb_text"/>

        </RadioGroup>


    </RelativeLayout>

    <Button
        android:id="@+id/view_preferences_settings_save_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_preferences_settings_mature_content_filter_rl"
        android:layout_alignLeft="@+id/view_preferences_settings_mature_content_filter_rl"
        android:text="@string/save"/>

    <RelativeLayout
        android:id="@+id/view_preferences_settings_manage_your_feed_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_preferences_settings_save_bt"
        android:layout_below="@+id/view_preferences_settings_save_bt"
        android:layout_marginBottom="@dimen/account_settings_general_title_tv_layout_marginBottom">

        <TextView
            android:id="@+id/view_preferences_settings_manage_your_feed_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/account_settings_general_name_title_tv_layout_marginBottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/view_preferences_settings_manage_your_feed_title_tv_text"/>

        <TextView
            android:id="@+id/view_preferences_settings_manage_your_feed_sort_tv"
            android:layout_width="@dimen/view_preferences_settings_manage_your_feed_sort_tv_layout_width"
            android:layout_height="@dimen/view_preferences_settings_manage_your_feed_sort_tv_layout_height"
            android:layout_below="@+id/view_preferences_settings_manage_your_feed_title_tv"
            android:layout_alignLeft="@+id/view_preferences_settings_manage_your_feed_title_tv"
            android:gravity="center"
            android:layout_marginRight="@dimen/view_preferences_settings_manage_your_feed_sort_tv_layout_marginRight"
            android:layout_marginBottom="@dimen/view_preferences_settings_manage_your_feed_sort_tv_layout_marginBottom"
            android:text="@string/view_preferences_settings_manage_your_feed_sort_tv_text"/>

        <Spinner
            android:id="@+id/view_preferences_settings_manage_your_feed_sort_spinner"
            android:layout_width="@dimen/view_preferences_settings_manage_your_feed__sort_spinner_layout_width"
            android:layout_height="@dimen/view_preferences_settings_manage_your_feed__sort_spinner_layout_height"
            android:layout_alignTop="@+id/view_preferences_settings_manage_your_feed_sort_tv"
            android:layout_toRightOf="@+id/view_preferences_settings_manage_your_feed_sort_tv"
            android:backgroundTint="@android:color/white"
            android:backgroundTintMode="src_atop"
            android:dropDownWidth="match_parent"
            android:popupBackground="@color/cardview_dark_background"></Spinner>

        <TextView
            android:id="@+id/view_preferences_settings_manage_your_feed_show_tv"
            android:layout_width="@dimen/view_preferences_settings_manage_your_feed_sort_tv_layout_width"
            android:layout_height="@dimen/view_preferences_settings_manage_your_feed_sort_tv_layout_height"
            android:layout_toRightOf="@+id/view_preferences_settings_manage_your_feed_sort_spinner"
            android:layout_alignTop="@+id/view_preferences_settings_manage_your_feed_sort_spinner"
            android:gravity="center"
            android:layout_marginLeft="@dimen/view_preferences_settings_manage_your_feed_show_tv_layout_marginLeft"
            android:layout_marginRight="@dimen/view_preferences_settings_manage_your_feed_sort_tv_layout_marginRight"
            android:text="@string/view_preferences_settings_manage_your_feed_show_tv_text"/>

        <Spinner
            android:id="@+id/view_preferences_settings_manage_your_feed_show_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view_preferences_settings_manage_your_feed_show_tv"
            android:layout_toRightOf="@+id/view_preferences_settings_manage_your_feed__sort_spinner"
            android:backgroundTint="@android:color/white"
            android:backgroundTintMode="src_atop"
            android:dropDownWidth="match_parent"
            android:popupBackground="@color/cardview_dark_background"></Spinner>

        <RelativeLayout
            android:id="@+id/view_preferences_settings_manage_your_feed_list_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_preferences_settings_manage_your_feed_sort_tv"
            android:layout_alignLeft="@+id/view_preferences_settings_manage_your_feed_sort_tv">


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>