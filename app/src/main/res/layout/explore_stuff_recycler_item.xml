<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginRight="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginTop="@dimen/recycler_view_item_layout_marginTop"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/recycler_view_item_padding"
    card_view:cardCornerRadius="@dimen/recycler_view_item_card_view_card_corner_radius">

    <RelativeLayout
        android:id="@+id/explore_stuff__rl"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/explore_stuff_icon_iv"
            android:layout_width="@dimen/profile_tablayout_followers_avatar_iv_layout_width_height"
            android:layout_height="@dimen/profile_tablayout_followers_avatar_iv_layout_width_height"
            android:layout_marginLeft="@dimen/profile_tablayout_followers_avatar_iv_layout_margin_top_left"
            android:layout_marginTop="@dimen/profile_tablayout_followers_avatar_iv_layout_margin_top_left" />

        <TextView
            android:id="@+id/explore_stuff_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/explore_stuff_icon_iv"
            android:layout_marginLeft="@dimen/profile_tablayout_followers_name_tv_layout_marginLeft"
            android:layout_toRightOf="@+id/explore_stuff_icon_iv"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/explore_stuff_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/explore_stuff_icon_iv"
            android:layout_below="@+id/explore_stuff_name_tv"
            android:layout_marginTop="@dimen/profile_tablayout_followers_location_tv_layout_marginTop"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>