<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/general_info_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/general_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/general_info_tv_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/general_info_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_info_tv"
            android:layout_alignLeft="@+id/general_info_tv"
            android:layout_marginBottom="25dp"
            android:text="@string/general_info_desc_tv_text"/>

        <TextView
            android:id="@+id/general_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_info_desc_tv"
            android:layout_alignLeft="@+id/general_info_desc_tv"
            android:layout_marginBottom="5dp"
            android:text="@string/general_title_tv_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <EditText
            android:id="@+id/general_title_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_title_tv"
            android:layout_alignLeft="@+id/general_title_tv"
            android:layout_marginBottom="25dp"
            android:textAppearance="@style/Base.DialogWindowTitle.AppCompat"/>

        <TextView
            android:id="@+id/general_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_title_et"
            android:layout_alignLeft="@+id/general_title_et"
            android:layout_marginBottom="5dp"
            android:text="@string/general_desc_tv_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <EditText
            android:id="@+id/general_desc_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_desc_tv"
            android:layout_alignLeft="@+id/general_desc_tv"
            android:hint="@string/general_desc_hint_tv_text"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/general_thumb_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_desc_et"
            android:layout_alignLeft="@+id/general_desc_et"
            android:layout_marginBottom="5dp"
            android:text="@string/general_thumbnail_tv_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <ImageView
            android:id="@+id/general_thumb_1_iv"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_below="@+id/general_thumb_tv"
            android:layout_alignLeft="@+id/general_thumb_tv"
            android:layout_marginBottom="25dp"/>

        <ImageView
            android:id="@+id/general_thumb_2_iv"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/general_thumb_1_iv"
            android:layout_alignTop="@+id/general_thumb_1_iv"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/general_edit_thumbnail_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_thumb_1_iv"
            android:layout_alignLeft="@+id/general_thumb_1_iv"
            android:text="@string/dialog_edit_thumb_title_tv_text"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:drawablePadding="10dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimaryDark"/>

        <view
            android:id="@+id/general_info_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/general_edit_thumbnail_bt"
            android:layout_alignLeft="@+id/general_edit_thumbnail_bt"
            android:background="@color/recycler_item_view_background">

        </view>

        <TextView
            android:id="@+id/general_privacy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_info_view"
            android:layout_alignLeft="@+id/general_info_view"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/general_privacy_tv_text"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/general_privacy_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_privacy_tv"
            android:layout_alignLeft="@+id/general_privacy_tv"
            android:layout_marginBottom="25dp"
            android:text="@string/general_privacy_desc_tv_text"/>

        <TextView
            android:id="@+id/general_privacy_watch_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_privacy_desc_tv"
            android:layout_alignLeft="@+id/general_privacy_desc_tv"
            android:text="@string/general_privacy_watch_settings_title_tv_text"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <Button
            android:id="@+id/general_privacy_watch_settings_upgrade_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/general_privacy_watch_settings_title_tv"
            android:layout_toRightOf="@+id/general_privacy_watch_settings_title_tv"
            android:layout_marginLeft="10dp"
            android:text="general_privacy_settings_upgrade_bt_text"/>

        <RadioGroup
            android:id="@+id/general_privacy_watch_settings_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/general_privacy_watch_settings_anyone_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_anyone_rb_text"/>

            <RadioButton
                android:id="@+id/general_privacy_watch_settings_only_me_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_i_rb_text"/>

            <RadioButton
                android:id="@+id/general_privacy_watch_settings_only_with_password_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_with_password_rb_text"/>

            <RadioButton
                android:id="@+id/general_privacy_watch_settings_only_follow_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_follow_rb_text"/>

            <RadioButton
                android:id="@+id/general_privacy_watch_settings_only_choose_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_watch_settings_only_choose_rb_text"/>

        </RadioGroup>

        <TextView
            android:id="@+id/general_privacy_embed_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_privacy_watch_settings_rg"
            android:layout_alignLeft="@+id/general_privacy_watch_settings_rg"
            android:text="@string/general_privacy_embed_settings_title_tv_text"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <Button
            android:id="@+id/general_privacy_embed_settings_upgrade_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/general_privacy_embed_settings_title_tv"
            android:layout_toRightOf="@+id/general_privacy_embed_settings_title_tv"
            android:layout_marginLeft="10dp"
            android:text="general_privacy_settings_upgrade_bt_text"/>

        <RadioGroup
            android:id="@+id/general_privacy_embed_settings_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/general_privacy_embed_settings_anywhere_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_embed_settings_anywhere_rb_text"/>

            <RadioButton
                android:id="@+id/general_privacy_embed_settings_nowhere_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_embed_settings_nowhere_rb_text"/>

        </RadioGroup>

        <TextView
            android:id="@+id/general_privacy_comment_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_privacy_embed_settings_rg"
            android:layout_alignLeft="@+id/general_privacy_embed_settings_rg"
            android:text="@string/general_privacy_comment_settings_title_tv_text"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <Button
            android:id="@+id/general_privacy_comment_settings_upgrade_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/general_privacy_comment_settings_title_tv"
            android:layout_toRightOf="@+id/general_privacy_comment_settings_title_tv"
            android:layout_marginLeft="10dp"
            android:text="general_privacy_settings_upgrade_bt_text"/>

        <RadioGroup
            android:id="@+id/general_privacy_comment_settings_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/general_privacy_comment_settings_anyone_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_comment_settings_anyone_rb_text"/>

            <RadioButton
                android:id="@+id/general_privacy_comment_settings_no_one_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_comment_settings_no_one_rb_text"/>

            <RadioButton
                android:id="@+id/general_privacy_comment_settings_only_i_follow_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/general_privacy_comment_settings_only_i_follow_rb_text"/>


        </RadioGroup>

        <view
            android:id="@+id/general_privacy_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/general_privacy_comment_settings_rg"
            android:layout_alignLeft="@+id/general_privacy_comment_settings_rg"
            android:background="@color/recycler_item_view_background"/>

        <TextView
            android:id="@+id/general_collections_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_privacy_view"
            android:layout_alignLeft="@+id/general_privacy_view"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/general_collections_tv_text"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/general_collections_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_tv"
            android:layout_alignLeft="@+id/general_collections_tv"
            android:layout_marginBottom="25dp"
            android:text="@string/general_collections_desc_tv_text"/>

        <TextView
            android:id="@+id/general_collections_albums_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_desc_tv"
            android:layout_alignLeft="@+id/general_collections_desc_tv"
            android:text="@string/general_collections_albums_settings_title_tv_text"
            android:layout_marginBottom="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <ImageView
            android:id="@+id/general_collections_albums_settings_create_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/general_collections_albums_settings_title_tv"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_add_grey_600_18dp"/>

        <RelativeLayout
            android:id="@+id/general_collections_albums_settings_check_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_albums_settings_title_tv"
            android:layout_alignLeft="@+id/general_collections_albums_settings_title_tv"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/general_collections_albums_settings_no_check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_collections_albums_settings_no_check_tv_text"/>

            <ListView
                android:id="@+id/general_collections_albums_settings_check_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/general_collections_channels_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_albums_settings_check_rl"
            android:layout_alignLeft="@+id/general_collections_albums_settings_check_rl"
            android:text="@string/general_collections_channels_settings_title_tv_text"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <ImageView
            android:id="@+id/general_collections_channels_settings_create_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/general_collections_channels_settings_title_tv"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_add_grey_600_18dp"/>

        <RelativeLayout
            android:id="@+id/general_collections_channels_settings_check_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_channels_settings_title_tv"
            android:layout_alignLeft="@+id/general_collections_channels_settings_title_tv"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/general_collections_channels_settings_no_check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_collections_channels_settings_no_check_tv_text"/>

            <ListView
                android:id="@+id/general_collections_channels_settings_check_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/general_collections_groups_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_channels_settings_check_rl"
            android:layout_alignLeft="@+id/general_collections_channels_settings_check_rl"
            android:text="@string/general_collections_groups_settings_title_tv_text"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <ImageView
            android:id="@+id/general_collections_groups_settings_create_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/general_collections_groups_settings_title_tv"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_add_grey_600_18dp"/>

        <RelativeLayout
            android:id="@+id/general_collections_groups_settings_check_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_groups_settings_title_tv"
            android:layout_alignLeft="@+id/general_collections_groups_settings_title_tv"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/general_collections_groups_settings_no_check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_collections_groups_settings_no_check_tv_text"/>

            <ListView
                android:id="@+id/general_collections_groups_settings_check_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/general_collections_portfolios_settings_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_groups_settings_check_rl"
            android:layout_alignLeft="@+id/general_collections_groups_settings_check_rl"
            android:text="@string/general_collections_portfolios_settings_title_tv_text"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <Button
            android:id="@+id/general_collections_portfolios_settings_upgrade_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/general_collections_portfolios_settings_title_tv"
            android:layout_toRightOf="@+id/general_collections_portfolios_settings_title_tv"
            android:layout_marginLeft="10dp"
            android:text="general_privacy_settings_upgrade_bt_text" />

        <RelativeLayout
            android:id="@+id/general_collections_portfolios_settings_check_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_portfolios_settings_title_tv"
            android:layout_alignLeft="@+id/general_collections_portfolios_settings_title_tv"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/general_collections_portfolios_settings_no_check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_collections_portfolios_settings_no_check_tv_text"/>

            <ListView
                android:id="@+id/general_collections_portfolios_settings_check_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>

        <view
            android:id="@+id/general_collections_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/general_collections_portfolios_settings_check_rl"
            android:layout_alignLeft="@+id/general_collections_portfolios_settings_check_rl"
            android:background="@color/recycler_item_view_background"/>

        <Button
            android:id="@+id/general_replace_video_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_collections_view"
            android:layout_alignLeft="@+id/general_collections_view"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/general_replace_video_bt_text"/>

        <Button
            android:id="@+id/general_delete_video_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/general_replace_video_bt"
            android:layout_alignLeft="@+id/general_replace_video_bt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="#E53935"
            android:gravity="center"
            android:text="@string/general_delete_video_bt_text"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/general_collections_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/general_info_rl">


    </RelativeLayout>

</RelativeLayout>